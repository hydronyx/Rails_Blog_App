<h1>List of Users</h1>
 
<%= link_to 'New User', new_user_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to ' Show User', user %></td>
      <td><%= link_to ' Edit User ', edit_user_path(user) %></td>
      <td><%= link_to ' Destroy User', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>